# Backstage Deployment Credentials Template
# Copy this file to .env.dev, .env.prod, etc. and fill in the values
# DO NOT commit the actual .env.* files to version control

# PostgreSQL Admin Password
# Generate with: openssl rand -base64 32
export TF_VAR_db_admin_password="REPLACE_WITH_SECURE_PASSWORD"

# GitHub Integration
# Create a Personal Access Token at: https://github.com/settings/tokens
# Permissions needed: repo, read:org, read:user, user:email
export TF_VAR_github_token="ghp_REPLACE_WITH_YOUR_GITHUB_PAT"

# GitHub OAuth Application
# Create at: https://github.com/settings/developers
export TF_VAR_github_client_id="REPLACE_WITH_GITHUB_OAUTH_CLIENT_ID"
export TF_VAR_github_client_secret="REPLACE_WITH_GITHUB_OAUTH_CLIENT_SECRET"

# Optional: Azure Subscription (if you have multiple)
# export ARM_SUBSCRIPTION_ID="your-subscription-id"

# Optional: Enable Terraform debug logging
# export TF_LOG=DEBUG
